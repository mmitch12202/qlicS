units si
atom_style charge

# Creating simulation box...
boundary m m m
region simulationDomain block -0.001  0.001 -0.001 0.001 -0.001 0.001 units box
create_box 1 simulationDomain

# Configure neighbour list...
neighbor 1 nsq
neigh_modify once yes

# Configure pairwise interactions for long range Coulombics only...
pair_style coul/cut 10
pair_coeff * *

# Placing individual ions...


create_atoms 1 single 2.9612184092463777e-05 -3.891391618959642e-05 0.000434828664382908 units box

create_atoms 1 single -0.0005403879288280207 0.0004899875091854087 -0.00010815255790965422 units box

create_atoms 1 single -0.0002030134989312699 0.0002063413176846771 -0.0006545720780906568 units box


# Species...
mass 1 1.4944851e-26
set type 1 charge 1.6021764599999998e-19
group 1 type 1


timestep 1e-06

# Configuring additional output to flush buffer during simulation...
thermo 10000
thermo_style custom step cpu
thermo_modify flush yes

# Time integration...

group nonRigidBody union all

fix timeIntegrator nonRigidBody nve



dump 9404608910 all custom 10 /Users/michaelmitchell/qlicS/data/2024-07-11_13-27-16/positions.txt id x y z vx vy vz





# Pseudopotential approximation for Linear Paul trap... (fixID=9409130782)


# SHO

