variable k_y9409130782		equal 1.773509e-12

variable k_z9409130782		equal 1.548694e-13

variable fX9409130782 atom "-v_k_x9409130782 * x"

variable fY9409130782 atom "-v_k_y9409130782 * y"

variable fZ9409130782 atom "-v_k_z9409130782 * z"

variable E9409130782 atom "v_k_x9409130782 * x * x /         2 + v_k_y9409130782 * y * y / 2 + v_k_z9409130782 * z * z / 2"

fix 9409130782 1 addforce         v_fX9409130782 v_fY9409130782 v_fZ9409130782 energy v_E9409130782




variable coolx atom (9.269386030594033e-20+(2.703426035144626e-21*vx))*-0.5000000000000001
variable cooly atom (9.269386030594033e-20+2.703426035144626e-21*vy)*-0.5000000000000001
variable coolz atom (9.269386030594033e-20+2.703426035144626e-21*vz)*-0.7071067811865476
