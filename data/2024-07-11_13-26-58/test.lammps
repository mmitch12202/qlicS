units si
atom_style charge

# Creating simulation box...
boundary m m m
region simulationDomain block -0.001  0.001 -0.001 0.001 -0.001 0.001 units box
create_box 1 simulationDomain

# Configure neighbour list...
neighbor 1 nsq
neigh_modify once yes

# Configure pairwise interactions for long range Coulombics only...
pair_style coul/cut 10
pair_coeff * *

# Placing individual ions...


create_atoms 1 single -6.677825736147424e-05 -6.703884566415802e-05 1.3246019805761941e-05 units box

create_atoms 1 single -8.883901598010342e-05 0.0002979291450618223 0.0004657419912929203 units box

create_atoms 1 single 3.6768547114994156e-05 2.510006811419091e-05 5.1169992805638895e-06 units box


# Species...
mass 1 1.4944851e-26
set type 1 charge 1.6021764599999998e-19
group 1 type 1


timestep 1e-06

# Configuring additional output to flush buffer during simulation...
thermo 10000
thermo_style custom step cpu
thermo_modify flush yes

# Time integration...

group nonRigidBody union all

fix timeIntegrator nonRigidBody nve



dump 9174708468 all custom 10 /Users/michaelmitchell/qlicS/data/2024-07-11_13-26-58/positions.txt id x y z vx vy vz





# Pseudopotential approximation for Linear Paul trap... (fixID=9179228197)


# SHO

