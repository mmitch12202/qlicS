variable k_y9179228197		equal 1.773509e-12

variable k_z9179228197		equal 1.548694e-13

variable fX9179228197 atom "-v_k_x9179228197 * x"

variable fY9179228197 atom "-v_k_y9179228197 * y"

variable fZ9179228197 atom "-v_k_z9179228197 * z"

variable E9179228197 atom "v_k_x9179228197 * x * x /         2 + v_k_y9179228197 * y * y / 2 + v_k_z9179228197 * z * z / 2"

fix 9179228197 1 addforce         v_fX9179228197 v_fY9179228197 v_fZ9179228197 energy v_E9179228197




variable coolx atom (9.269386030594033e-20+(2.703426035144626e-21*vx))*-0.5000000000000001
