units si
atom_style charge

# Creating simulation box...
boundary m m m
region simulationDomain block -0.001  0.001 -0.001 0.001 -0.001 0.001 units box
create_box 1 simulationDomain

# Configure neighbour list...
neighbor 1 nsq
neigh_modify once yes

# Configure pairwise interactions for long range Coulombics only...
pair_style coul/cut 10
pair_coeff * *

# Placing individual ions...


create_atoms 1 single -0.00023265060560657765 -0.00023391266191759278 6.727155892608414e-06 units box

create_atoms 1 single -0.0002621840858578462 0.00023988279851861646 0.0009206944885616934 units box

create_atoms 1 single 0.00020765730326546703 0.00033220520281391195 0.00032630274590600384 units box


# Species...
mass 1 1.4944851e-26
set type 1 charge 1.6021764599999998e-19
group 1 type 1



# Configuring additional output to flush buffer during simulation...
thermo 10000
thermo_style custom step cpu
thermo_modify flush yes

# Time integration...

group nonRigidBody union all

fix timeIntegrator nonRigidBody nve



dump 9596714584 all custom 10 /Users/michaelmitchell/qlicS/data/2024-07-15_13-00-02/positions.txt id x y z vx vy vz





# Pseudopotential approximation for Linear Paul trap... (fixID=9601169797)


# SHO

variable k_x9601169797		equal 2.973789e-13

variable k_y9601169797		equal 2.973789e-13

variable k_z9601169797		equal 4.835556e-14

variable fX9601169797 atom "-v_k_x9601169797 * x"

variable fY9601169797 atom "-v_k_y9601169797 * y"

variable fZ9601169797 atom "-v_k_z9601169797 * z"

variable E9601169797 atom "v_k_x9601169797 * x * x /         2 + v_k_y9601169797 * y * y / 2 + v_k_z9601169797 * z * z / 2"

fix 9601169797 1 addforce         v_fX9601169797 v_fY9601169797 v_fZ9601169797 energy v_E9601169797




variable coolx atom (9.269386030594033e-20+(2.703426035144626e-21*vx))*-0.5000000000000001
variable cooly atom (9.269386030594033e-20+2.703426035144626e-21*vy)*-0.5000000000000001
variable coolz atom (9.269386030594033e-20+2.703426035144626e-21*vz)*-0.7071067811865476
