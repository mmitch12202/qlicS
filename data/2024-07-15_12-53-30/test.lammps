units si
atom_style charge

# Creating simulation box...
boundary m m m
region simulationDomain block -0.001  0.001 -0.001 0.001 -0.001 0.001 units box
create_box 1 simulationDomain

# Configure neighbour list...
neighbor 1 nsq
neigh_modify once yes

# Configure pairwise interactions for long range Coulombics only...
pair_style coul/cut 10
pair_coeff * *

# Placing individual ions...


create_atoms 1 single -4.295787624850045e-05 0.00010695447104831246 -8.603934523971378e-05 units box

create_atoms 1 single -0.0001590637783223241 -0.00014781504025364146 4.55183951674216e-05 units box

create_atoms 1 single 0.00035626238405837103 2.2808936429025298e-06 -0.0009295905292564923 units box


# Species...
mass 1 1.4944851e-26
set type 1 charge 1.6021764599999998e-19
group 1 type 1



# Configuring additional output to flush buffer during simulation...
thermo 10000
thermo_style custom step cpu
thermo_modify flush yes

# Time integration...

group nonRigidBody union all

fix timeIntegrator nonRigidBody nve



dump 9830048299 all custom 10 /Users/michaelmitchell/qlicS/data/2024-07-15_12-53-30/positions.txt id x y z vx vy vz





# Pseudopotential approximation for Linear Paul trap... (fixID=10307191822)


# SHO

variable k_x10307191822		equal 2.973789e-13

variable k_y10307191822		equal 2.973789e-13

variable k_z10307191822		equal 4.835556e-14

variable fX10307191822 atom "-v_k_x10307191822 * x"

variable fY10307191822 atom "-v_k_y10307191822 * y"

variable fZ10307191822 atom "-v_k_z10307191822 * z"

variable E10307191822 atom "v_k_x10307191822 * x * x /         2 + v_k_y10307191822 * y * y / 2 + v_k_z10307191822 * z * z / 2"

fix 10307191822 1 addforce         v_fX10307191822 v_fY10307191822 v_fZ10307191822 energy v_E10307191822




variable coolx atom (9.269386030594033e-20+(2.703426035144626e-21*vx))*-0.5000000000000001
variable cooly atom (9.269386030594033e-20+2.703426035144626e-21*vy)*-0.5000000000000001
variable coolz atom (9.269386030594033e-20+2.703426035144626e-21*vz)*-0.7071067811865476
fix 569202603907002 1 addforce v_coolx v_cooly v_coolz



timestep 1e-07


# Run simulation

run 50000


