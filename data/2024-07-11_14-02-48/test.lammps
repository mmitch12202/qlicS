units si
atom_style charge

# Creating simulation box...
boundary m m m
region simulationDomain block -0.001  0.001 -0.001 0.001 -0.001 0.001 units box
create_box 1 simulationDomain

# Configure neighbour list...
neighbor 1 nsq
neigh_modify once yes

# Configure pairwise interactions for long range Coulombics only...
pair_style coul/cut 10
pair_coeff * *

# Placing individual ions...


create_atoms 1 single 1.1893276614857157e-05 0.00011778680596346785 5.3218209911706775e-05 units box

create_atoms 1 single 0.00031563294242356794 8.676667121047478e-05 -0.0007569183572262453 units box

create_atoms 1 single 0.0005723100229504144 0.0005579524729689552 9.620614064327958e-06 units box


# Species...
mass 1 1.4944851e-26
set type 1 charge 1.6021764599999998e-19
group 1 type 1


timestep 1e-06

# Configuring additional output to flush buffer during simulation...
thermo 10000
thermo_style custom step cpu
thermo_modify flush yes

# Time integration...

group nonRigidBody union all

fix timeIntegrator nonRigidBody nve



dump 8983082447 all custom 10 /Users/michaelmitchell/qlicS/data/2024-07-11_14-02-48/positions.txt id x y z vx vy vz





# Pseudopotential approximation for Linear Paul trap... (fixID=8987598311)


