variable k_y8987598311		equal 2.973789e-13

variable k_z8987598311		equal 4.835556e-14

variable fX8987598311 atom "-v_k_x8987598311 * x"

variable fY8987598311 atom "-v_k_y8987598311 * y"

variable fZ8987598311 atom "-v_k_z8987598311 * z"

variable E8987598311 atom "v_k_x8987598311 * x * x /         2 + v_k_y8987598311 * y * y / 2 + v_k_z8987598311 * z * z / 2"

fix 8987598311 1 addforce         v_fX8987598311 v_fY8987598311 v_fZ8987598311 energy v_E8987598311




variable coolx atom (9.269386030594033e-20+(2.703426035144626e-21*vx))*-0.5000000000000001
