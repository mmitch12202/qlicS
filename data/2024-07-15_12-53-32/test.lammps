units si
atom_style charge

# Creating simulation box...
boundary m m m
region simulationDomain block -0.001  0.001 -0.001 0.001 -0.001 0.001 units box
create_box 1 simulationDomain

# Configure neighbour list...
neighbor 1 nsq
neigh_modify once yes

# Configure pairwise interactions for long range Coulombics only...
pair_style coul/cut 10
pair_coeff * *

# Placing individual ions...


create_atoms 1 single -4.170144229354082e-05 5.086135712391087e-05 4.784577088430357e-05 units box


# Species...
mass 1 1.4944851e-26
set type 1 charge 1.6021764599999998e-19
group 1 type 1



# Configuring additional output to flush buffer during simulation...
thermo 10000
thermo_style custom step cpu
thermo_modify flush yes

# Time integration...

group nonRigidBody union all

fix timeIntegrator nonRigidBody nve



dump 10372433704 all custom 10 /Users/michaelmitchell/qlicS/data/2024-07-15_12-53-32/positions.txt id x y z vx vy vz





# Pseudopotential approximation for Linear Paul trap... (fixID=10372536331)


# SHO

variable k_x10372536331		equal 2.973789e-13

variable k_y10372536331		equal 2.973789e-13

variable k_z10372536331		equal 4.835556e-14

variable fX10372536331 atom "-v_k_x10372536331 * x"

variable fY10372536331 atom "-v_k_y10372536331 * y"

variable fZ10372536331 atom "-v_k_z10372536331 * z"

variable E10372536331 atom "v_k_x10372536331 * x * x /         2 + v_k_y10372536331 * y * y / 2 + v_k_z10372536331 * z * z / 2"

fix 10372536331 1 addforce         v_fX10372536331 v_fY10372536331 v_fZ10372536331 energy v_E10372536331




variable coolx atom (9.269386030594033e-20+(2.703426035144626e-21*vx))*-0.5000000000000001
variable cooly atom (9.269386030594033e-20+2.703426035144626e-21*vy)*-0.5000000000000001
variable coolz atom (9.269386030594033e-20+2.703426035144626e-21*vz)*-0.7071067811865476
fix 569202603907002 1 addforce v_coolx v_cooly v_coolz



timestep 1e-09


# Run simulation

run 20000




