variable k_y9351652706		equal 1.773509e-12

variable k_z9351652706		equal 1.548694e-13

variable fX9351652706 atom "-v_k_x9351652706 * x"

variable fY9351652706 atom "-v_k_y9351652706 * y"

variable fZ9351652706 atom "-v_k_z9351652706 * z"

variable E9351652706 atom "v_k_x9351652706 * x * x /         2 + v_k_y9351652706 * y * y / 2 + v_k_z9351652706 * z * z / 2"

fix 9351652706 1 addforce         v_fX9351652706 v_fY9351652706 v_fZ9351652706 energy v_E9351652706




variable coolx atom (9.269386030594033e-20+(2.703426035144626e-21*vx))*-0.5000000000000001
variable cooly atom (9.269386030594033e-20+2.703426035144626e-21*vy)*-0.5000000000000001
variable coolz atom (9.269386030594033e-20+2.703426035144626e-21*vz)*-0.7071067811865476
